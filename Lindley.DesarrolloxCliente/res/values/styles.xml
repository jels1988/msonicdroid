	 <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackgroundCustom</item>
     <item name="android:windowSoftInputMode">stateUnspecified|adjustUnspecified</item>
     
 	<item name="android:editTextStyle">@style/EditTextCustom</item>
 	<item name="android:textViewStyle">@style/TextViewCustom</item>
 	<item name="android:buttonStyle">@style/ButtonCustom</item>
 	
</style>

</resources>
