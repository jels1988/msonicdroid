<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        	<gradient android:startColor="#FF0000" android:centerColor="#36393D" android:endColor="#FF0000" android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#B02B2C" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
   
       <item>
        <shape>
            <gradient
      android:startColor="#36393D"
      android:centerColor="#FF0000"
      android:endColor="#36393D"
       android:centerX="50%"
       android:centerY="110%"
      android:angle="90"
      android:type="sweep"/>
            <stroke
                android:width="1dp"
                android:color="#B02B2C" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    

</selector>