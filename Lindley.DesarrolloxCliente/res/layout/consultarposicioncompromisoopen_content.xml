<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout"
        android:layout_width="800dip"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

             <TextView
                android:id="@+id/TextViewRpsta"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="" />
             
              <TextView
                android:id="@+id/txViewPuntos"
                android:layout_width="40dip"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="" />
             
             <Button
                android:id="@+id/btnFotoInicial"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/ver_fotoInicial" />

            <Button
                android:id="@+id/btnFotoExito"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:layout_gravity="center"
                android:text="@string/ver_fotoExito" />
            
            <TextView
                android:id="@+id/txViewRed"
                android:layout_width="30dip"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="" />

            <TextView
                android:id="@+id/txViewMaximo"
                android:layout_width="30dip"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="" />
           

            <EditText                
                android:id="@+id/txViewAccComp"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:maxLength="50"
                android:text="" />

            <LinearLayout android:layout_width="120dip" android:layout_height="match_parent" android:orientation="horizontal" android:gravity="center">
                
                 <EditText
                android:id="@+id/txEditFecha"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:editable="false"
                android:maxLength="10"
                android:text="" />    
                                 
                 <ImageButton android:id="@+id/btnFecha" 
                     android:layout_height="wrap_content"
                      android:layout_width="wrap_content" 
                      android:layout_gravity="center_vertical"
                      android:focusable="false" 
                      android:src="@drawable/btn_calendario"/>
                
            </LinearLayout>
		        
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />
    </TableLayout>

</LinearLayout>