<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.thira.examples.actionbar.widget.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextViewLabel"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Fecha: " />

        <TextView
            android:id="@+id/txtViewFecha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:text="" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tableLayout"
                    android:layout_width="1500dip"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*" >

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Producto" />

                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="50dip"
                            android:layout_height="wrap_content"
                            android:text="Concreción" />

                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="50dip"
                            android:layout_height="wrap_content"
                            android:text="SOVI" />

                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="70dip"
                            android:layout_height="wrap_content"
                            android:text="Cumple Precio" />

                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="70dip"
                            android:layout_height="wrap_content"
                            android:text="Número Sabores" />

                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="50dip"
                            android:layout_height="wrap_content"
                            android:text="Puntos Coca Cola" />

                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:text="Acciones Trade" />

                        <TextView
                            style="@style/TextViewLabel"
			                android:layout_width="1dip"
			                android:layout_height="wrap_content"
			                android:clickable="true"
			                android:text="" />
                        
                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="70dip"
                            android:layout_height="wrap_content"
                            android:text="Fecha Compromiso" />

                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="50dip"
                            android:layout_height="wrap_content"
                            android:text="Puntos Bonus" />

                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="40dip"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="" />
                    </TableRow>

                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />
                </TableLayout>

                <ListView
                    android:id="@+id/android:list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="25dip"
                    android:drawSelectorOnTop="false"
                    android:focusable="false" />
                
                 <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:onClick="btnSiguiente_click" />
                
            </RelativeLayout>
        </HorizontalScrollView>
    </ScrollView>

</LinearLayout>