                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="" />
             
            <Button
                android:id="@+id/txViewVerDetalle"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/ver_detalle" />
        </TableRow>
    </TableLayout>

</LinearLayout>