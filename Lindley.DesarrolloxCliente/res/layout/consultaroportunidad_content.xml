<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout"
        android:layout_width="1500dip"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
		        android:id="@+id/chkSeleccion"
		        android:layout_width="20dip"
		        android:layout_height="wrap_content"	
		        android:layout_gravity="center_vertical|center_horizontal"	        
		        android:text="" />
            
            <Button
                android:id="@+id/btnProfit"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/ver_profit" />
            
            <TextView
                android:id="@+id/txViewPro"
                android:layout_width="100dip"
                android:layout_height="40dip"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/txViewConcrecion"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="" />

			<TextView
                android:id="@+id/txViewSOVI"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="" />
			
            <TextView
                android:id="@+id/txViewCumPrecio"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/txViewSabores"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="" />

			<TextView
                android:id="@+id/txViewPCoca"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="" />
			
             <Spinner
                 android:id="@+id/cboAccTrade"
				android:layout_width="100dip"
                android:layout_height="wrap_content" />
             
            <TextView
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="" />
            
             
              <TextView
                android:id="@+id/txViewPBonus"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="" />
                         
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />
    </TableLayout>
    
</LinearLayout>