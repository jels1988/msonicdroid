<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lindley.desarrolloxcliente"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"></uses-permission>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@style/CustomTheme"
        android:name="MyApplication">
         
        <uses-library android:name="com.google.android.maps" android:required="true"/>
        
        <activity android:name="DireccionActivity" android:configChanges="keyboardHidden|orientation"/>
        
        <activity
            android:name=".activity.Login_Activity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".activity.ConsultarCliente_Activity">
            <intent-filter>
                <action android:name="lindley.desarrolloxcliente.consultarcliente" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name=".activity.ConsultarCabecera_Activity">
            <intent-filter>
                <action android:name="lindley.desarrolloxcliente.consultarcabecera" />                					  
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
                
        <activity android:name=".activity.ConsultarOportunidad_Activity">
            <intent-filter>
                <action android:name="lindley.desarrolloxcliente.consultaroportunidad" />                					  
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity android:name=".activity.CompromisoOpen_Activity">
            <intent-filter>
                <action android:name="lindley.desarrolloxcliente.consultarcompromisoopen" />                					  
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity android:name=".activity.CompromisoClose_Activity">
            <intent-filter>
                <action android:name="lindley.desarrolloxcliente.consultarcompromisoclose" />                					  
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>