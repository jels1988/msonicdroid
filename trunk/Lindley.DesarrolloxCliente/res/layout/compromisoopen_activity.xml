<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- <com.thira.examples.actionbar.widget.ActionBar -->
    <!-- android:id="@+id/actionBar" -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="44dip" -->
    <!-- android:layout_alignParentLeft="true" -->
    <!-- android:layout_alignParentTop="true" /> -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtViewCliente"
            style="@style/TextViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Fecha: " />

        <TextView
            android:id="@+id/txtViewFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="2000dip"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="*" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Producto" />

                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:text="Concreción" />

                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="20dip"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:text="SOVI Actual" />
                    
                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:text="SOVI Comp." />

                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="20dip"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="70dip"
                        android:layout_height="wrap_content"
                        android:text="Cumple Precio Actual" />

                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="70dip"
                        android:layout_height="wrap_content"
                        android:text="Cumple Precio Comp." />
                    
                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="20dip"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="70dip"
                        android:layout_height="wrap_content"
                        android:text="Número Sabores" />

                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="20dip"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:text="Puntos" />

                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:text="Acciones Trade" />

                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"
                        android:text="Fecha" />

                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="20dip"
                        android:layout_height="wrap_content"
                        android:text="Cumplio" />

                    <TextView
                        style="@style/TextViewHead"
                        android:layout_width="40dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="" />
                </TableRow>
            </TableLayout>

            <ListView
                android:id="@+id/android:list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dip"
                android:layout_marginTop="2dip"
                android:drawSelectorOnTop="false"
                android:focusable="false" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:focusable="false"
            android:onClick="btnGuardar_click"
            android:text="@string/compromiso_open_guardar" >
        </Button>

        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:focusable="false"
            android:onClick="btnCerrar_click"
            android:text="@string/compromiso_open_cerrar" >
        </Button>
    </LinearLayout>

</LinearLayout>