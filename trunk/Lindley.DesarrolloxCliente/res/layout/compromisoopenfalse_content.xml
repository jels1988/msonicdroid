<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="1500dip"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
                        
			<TextView
                android:id="@+id/txViewPuntos"
                android:layout_width="25dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text=""
                android:gravity="center_vertical|center_horizontal" />
			
			<ImageButton
                android:id="@+id/btnProfit"
                android:layout_width="10dip"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:focusable="false"
                android:src="@drawable/bar_chart" />
						
			<TextView
                android:id="@+id/txViewPro" 
                android:layout_width="150dip"
                android:layout_height="40dip"
                android:gravity="left|center_vertical"
                android:text="" />

           <TextView
                android:id="@+id/txViewConcrecion" 
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="" />
           
           <TextView
                android:id="@+id/txViewConcrecionActual"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="" />
           
            
             <CheckBox
                android:id="@+id/chkViewConcrecion"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="" />          
             
			<TextView
                android:id="@+id/txViewSOVI"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="" />
			
			<TextView
                android:id="@+id/txViewSOVICmp"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="" />
			
			<CheckBox
                android:id="@+id/chkViewSOVI"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="" />   
			
            <TextView
                android:id="@+id/txViewCumPrecio"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="" />
            
            <TextView
                android:id="@+id/txViewCumPrecioCmp"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="" />
            
            <CheckBox
                android:id="@+id/chkViewPrecio"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="" />   
            
            <TextView
                android:id="@+id/txViewSabores"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="" />
            
            <TextView
                android:id="@+id/txViewSaboresActual"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="" />
                        
            <CheckBox
                android:id="@+id/chkViewSabor"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="" />   
                
             <TextView
                android:id="@+id/txViewAccTrade"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="" />
             
             <TextView
                android:id="@+id/txViewFecha"
                android:layout_width="90dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="" />
            
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />
    </TableLayout>
   
</LinearLayout>