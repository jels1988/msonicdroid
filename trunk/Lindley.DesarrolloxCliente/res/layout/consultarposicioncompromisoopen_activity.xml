<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.thira.examples.actionbar.widget.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextViewLabel"
            android:id="@+id/txtViewCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="" />
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Fecha: " />

        <TextView
            android:id="@+id/txtViewFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="" />
    
    </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_height="wrap_content" 
               android:layout_width="wrap_content"
                android:orientation="vertical" >

                <TableLayout
                    android:layout_width="2000dip"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*" >

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                        
                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="40dip"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Activos Empresa" />
                        
                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="120dip"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Variable" />
                        
                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="40dip"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Red" />
                        
                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="50dip"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Pto. MÃ¡ximo" />

                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="50dip"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Diferencia" />

                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="40dip"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Puntos" />
                        
                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="60dip"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="" />
                        
                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="60dip"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="" />
                        
                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="120dip"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Acc. Compromiso" />
                        
                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="120dip"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Fecha Compromiso" />
                        
                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="60dip"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="" />
                        
                        <TextView
                            style="@style/TextViewLabel"
                            android:layout_width="20dip"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Cumplio" />
                         
                    </TableRow>

                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />
                </TableLayout>

                <ListView
                    android:id="@+id/android:list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dip"
                    android:layout_marginTop="2dip"
                    android:drawSelectorOnTop="false"
                    android:focusable="false" />
                
            </LinearLayout>
        </HorizontalScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:focusable="false"
            android:onClick="btnGuardar_click"
            android:text="@string/compromiso_open_guardar" >
        </Button>

        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:focusable="false"
            android:onClick="btnCerrar_click"
            android:text="@string/compromiso_open_cerrar" >
        </Button>
    </LinearLayout>

</LinearLayout>