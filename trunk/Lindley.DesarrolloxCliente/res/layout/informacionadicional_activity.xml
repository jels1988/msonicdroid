<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!--com.thira.examples.actionbar.widget.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" /-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:focusable="false"
            android:text="¿Tiene Combos SS ?" >
        </TextView>

        <RadioGroup
            android:id="@+id/radGrSS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radSSNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:checked="true"
                android:text="NO" />

            <RadioButton
                android:id="@+id/radSSSi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SI" />
        </RadioGroup>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:focusable="false"
            android:text="Observación: " >
        </TextView>

        <EditText
            android:id="@+id/txtObsSS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="150" >

            <requestFocus />
        </EditText>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:focusable="false"
            android:text="¿Tiene Combos MS ?" >
        </TextView>

        <RadioGroup
            android:id="@+id/radGrMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radMSNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:paddingRight="10dip"
                android:text="NO" />

            <RadioButton
                android:id="@+id/radMSSi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SI" />
        </RadioGroup>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:focusable="false"
            android:text="Observación: " >
        </TextView>

        <EditText
            android:id="@+id/txtObs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="150" >
        </EditText>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/android:list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dip"
                android:layout_marginTop="2dip"
                android:drawSelectorOnTop="false"
                android:focusable="false" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:focusable="false"
            android:onClick="btnCancelar_click"
            android:text="@string/compromiso_open_cancelar" >
        </Button>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:focusable="false"
            android:onClick="btnGuardar_click"
            android:text="@string/compromiso_open_guardar" >
        </Button>
    </LinearLayout>

</LinearLayout>