<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.thira.examples.actionbar.widget.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

      <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >


                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tableLayoutCda"
                    android:layout_width="3200dip"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*" >

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="50dip"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Nro." />

                        <TextView
                            android:layout_width="70dip"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Contacto" />

                        <TextView
                            android:layout_width="50dip"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Días" />

                        <TextView
                            android:layout_width="80dip"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:text="Fecha" />

                        <TextView
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Hora" />

                        <TextView
                            android:layout_width="70dip"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Tipo" />

                        <TextView
                            android:layout_width="300dip"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:text="Nombre" />

                        <TextView
                            android:layout_width="220dip"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Responsable Actual" />

                        <TextView
                            android:layout_width="70dip"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Situación" />

                        <TextView
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Tipo Contacto" />

                        <TextView
                            android:layout_width="300dip"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Tema" />

                        <TextView
                            android:layout_width="350dip"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Subtema" />

                        <TextView
                            android:layout_width="350dip"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Canal" />

                        <TextView
                            android:layout_width="350dip"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Dirección" />

                        <TextView
                            android:layout_width="150dip"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:text="Planta" />

                        <TextView
                            android:layout_width="150dip"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Producto" />

                        <TextView
                            android:layout_width="70dip"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="" />
                    </TableRow>

                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />
                </TableLayout>
                

                <ListView
            android:id="@+id/android:list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dip"
            android:layout_marginTop="25dip"
            android:focusable="false"
            android:drawSelectorOnTop="false" />
            </RelativeLayout>
        </HorizontalScrollView>
    </ScrollView>

</LinearLayout>