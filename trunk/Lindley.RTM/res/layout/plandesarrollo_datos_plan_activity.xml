 	         android:layout_width="wrap_content"
 	         android:layout_height="wrap_content"
 	         android:checked="true"
 	         android:text="Abierto" />

 	     <RadioButton
 	         android:id="@+id/radioCerrado"
 	         android:layout_width="wrap_content"
 	         android:layout_height="wrap_content"
 	         android:text="Cerrado" />
 	 </RadioGroup>
 	     
 	 <Button
