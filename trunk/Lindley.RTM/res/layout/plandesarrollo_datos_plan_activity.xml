 	<TextView android:text="Fecha Inicio  :" android:focusable="false" android:layout_height="wrap_content" android:layout_weight="0" android:layout_width="fill_parent" ></TextView> 	
 	 <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	     <EditText android:id="@+id/txtFechaInicio" android:enabled="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Fecha Inicio" android:text="" android:layout_weight="1" android:inputType="number" android:maxLength="11" android:singleLine="true"/>
			
			<ImageButton android:onClick="btnFecInicio_onclick" android:src="@drawable/btn_calendario" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageButton>
	</LinearLayout>

 	 <TextView android:text="Fecha Fin  :" android:focusable="false" android:layout_height="wrap_content" android:layout_weight="0" android:id="@+id/txViewFecFin" android:layout_width="fill_parent" ></TextView> 	
 	 <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	     <EditText android:id="@+id/txtFechaFin" android:enabled="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Fecha Fin" android:text="" android:layout_weight="1" android:inputType="number" android:maxLength="11" android:singleLine="true"/>
			
			<ImageButton android:id="@+id/btnFechafin" android:onClick="btnFecFin_onclick" android:src="@drawable/btn_calendario" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageButton>
	</LinearLayout>

 	 <RadioGroup
