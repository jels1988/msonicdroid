<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lineItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayoutCda" 
        android:layout_width="1500dip"
        android:layout_height="wrap_content" 
        android:stretchColumns="*"
        android:shrinkColumns="*">         
      
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txViewCodigo"
                android:layout_height="40dip"
                android:layout_width="30dip"
                android:gravity="center"
                android:text="" />
            
             <TextView
                 android:id="@+id/txViewFecVisita"
                    android:layout_width="50dip"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="" />
            
                <TextView
                android:id="@+id/txViewLabor"                
                android:layout_height="wrap_content"
                 android:layout_width="70dip"
                android:text="" />
                
                <TextView
                android:id="@+id/txViewDescripcion"
                android:layout_height="wrap_content"
                 android:layout_width="300dip"
                android:text="" />
                
                <TextView
                android:id="@+id/txViewUsuario"
                android:layout_height="wrap_content"
                 android:layout_width="100dip"
                 android:gravity="center"
                android:text="" />
                
                <TextView
                android:id="@+id/txViewHora"
                android:layout_height="wrap_content"
                 android:layout_width="70dip"
                 android:gravity="center"
                android:text="" />
				
				<TextView
                android:id="@+id/txViewEditar"
                android:layout_height="wrap_content"
                 android:layout_width="50dip"
                 android:gravity="center"
                android:text="@string/detalle_Editar" />
                
                <TextView
                android:id="@+id/txViewEliminar"
                android:layout_height="wrap_content"
                 android:layout_width="50dip"
                 android:gravity="center"
                android:text="@string/detalle_Eliminar" />
                               
                
        </TableRow>
        
        <View
            android:layout_height="2dip"
            android:background="#FF909090" />
    </TableLayout>
</LinearLayout>