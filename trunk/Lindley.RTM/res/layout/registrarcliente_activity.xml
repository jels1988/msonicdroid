        <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content" >
        		

		
        <LinearLayout android:id="@+id/LinearLayout03"
			 android:layout_width="fill_parent" 
			 android:layout_height="fill_parent" 
			 android:gravity="bottom"
			 android:layout_span="2">
			 <Button android:id="@+id/btnDatosGenerales" android:focusable="false"	android:layout_alignParentLeft="true" 	android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/registrar_cliente_activity_btnDatosGenerales" android:onClick="btnDatosGenerales_click"/>
			 <Button android:id="@+id/btnCartera" 		 android:focusable="false"	android:layout_alignParentRight="true" 	android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/registrar_cliente_activity_btnDatosCartera" android:onClick="btnDatosCartera_click"/>
		 </LinearLayout>
