<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lineItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayoutCda"
        android:layout_width="1500dip"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txViewCodigo"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/txViewAct"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:clickable="true"
                
                android:layout_gravity="center"
                android:text="" />

              <TextView
                  android:id="@+id/txViewResponsable"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    
                android:layout_gravity="center"
                    android:text="" />
              
            <TextView
                android:id="@+id/txViewFecTnt"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="center"  
                android:layout_gravity="center"             
                android:text="" />

            <CheckBox
                android:id="@+id/chckTerminado"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
            
            <TextView
                android:id="@+id/txViewFchEje"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="center"                
                android:layout_gravity="center"
                android:text="" />

            <ImageView
				android:id="@+id/imgSustento"
				android:gravity="center"
				android:layout_gravity="center"
 				android:layout_width="10dip"
				android:layout_height="wrap_content">
				</ImageView>
				
             <TextView
                  android:id="@+id/txViewSustento"
                    android:layout_height="wrap_content"
                    android:layout_width="70dip"
                    android:gravity="center"
                android:layout_gravity="center"
                    android:text="@string/detalle_sustento"/>             

            
            <TextView
                android:id="@+id/txViewEditar"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/detalle_Editar" />
            
             <TextView
                android:id="@+id/txViewEliminar"
                android:layout_width="50dip"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/detalle_Eliminar" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />
    </TableLayout>

</LinearLayout>