<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:orientation="vertical"
  android:layout_height="match_parent">
  
  
 <com.thira.examples.actionbar.widget.ActionBar
		android:id="@+id/actionBar" 
		android:layout_width="fill_parent"
		android:layout_height="44dip" 
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true" />  
 
 <TableLayout android:stretchColumns="1" 
 				android:id="@+id/tableLayout1" 
 				android:layout_height="wrap_content" 
 				android:layout_width="fill_parent">
 				
	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
         <TextView android:text="Fecha :" style="@style/TextViewLabel"  android:layout_height="fill_parent" android:layout_weight="0" android:layout_width="fill_parent"></TextView>
         <TextView android:id="@+id/txtFecha"  android:text=""  android:layout_height="wrap_content" android:layout_weight="0" android:padding="2dip" android:layout_width="fill_parent"></TextView>
     </TableRow>
     
     <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/custom_theme_color_amarillo_alterno">
         <TextView android:text="Código :" style="@style/TextViewLabel"  android:layout_height="fill_parent" android:layout_weight="0" android:layout_width="fill_parent"></TextView>
         <TextView android:id="@+id/txtCodigo"  android:text=""  android:layout_height="wrap_content" android:layout_weight="0" android:padding="2dip" android:layout_width="fill_parent"></TextView>
     </TableRow>
     
     <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
         <TextView android:text="Nombre :" style="@style/TextViewLabel"  android:layout_height="fill_parent" android:layout_weight="0" android:layout_width="fill_parent"></TextView>
         <TextView android:id="@+id/txtNombre"  android:text=""  android:layout_height="wrap_content" android:layout_weight="0" android:padding="2dip" android:layout_width="fill_parent"></TextView>
     </TableRow>
     
     <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/custom_theme_color_amarillo_alterno">
         <TextView android:text="Direccion :" style="@style/TextViewLabel"  android:layout_height="fill_parent" android:layout_weight="0" android:layout_width="fill_parent"></TextView>
         <TextView android:id="@+id/txtDireccion"  android:text=""  android:layout_height="wrap_content" android:layout_weight="0" android:padding="2dip" android:layout_width="fill_parent"></TextView>
     </TableRow>
     
     <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
         <TextView android:text="Ubicación :" style="@style/TextViewLabel"  android:layout_height="fill_parent" android:layout_weight="0" android:layout_width="fill_parent"></TextView>
         <TextView android:id="@+id/txtUbicacion"  android:text=""  android:layout_height="wrap_content" android:layout_weight="0" android:padding="2dip" android:layout_width="fill_parent"></TextView>
     </TableRow>
     
     <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/custom_theme_color_amarillo_alterno">
         <TextView android:text="Distribuidor :" style="@style/TextViewLabel"  android:layout_height="fill_parent" android:layout_weight="0" android:layout_width="fill_parent"></TextView>
         <TextView android:id="@+id/txtDistribuidor"  android:text=""  android:layout_height="wrap_content" android:layout_weight="0" android:padding="2dip" android:layout_width="fill_parent"></TextView>
     </TableRow>
     
     <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
         <TextView android:text="Ruta :" style="@style/TextViewLabel"  android:layout_height="fill_parent" android:layout_weight="0" android:layout_width="fill_parent"></TextView>
         <TextView android:id="@+id/txtRuta"  android:text=""  android:layout_height="wrap_content" android:layout_weight="0" android:padding="2dip" android:layout_width="fill_parent"></TextView>
     </TableRow>
     
     <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/custom_theme_color_amarillo_alterno">
         <TextView android:text="Segmento :" style="@style/TextViewLabel"  android:layout_height="fill_parent" android:layout_weight="0" android:layout_width="fill_parent"></TextView>
         <TextView android:id="@+id/txtSegmento"  android:text=""  android:layout_height="wrap_content" android:layout_weight="0" android:padding="2dip" android:layout_width="fill_parent"></TextView>
     </TableRow>
     
     <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
         <TextView android:text="Cluster :" style="@style/TextViewLabel"  android:layout_height="fill_parent" android:layout_weight="0" android:layout_width="fill_parent"></TextView>
         <TextView android:id="@+id/txtCluster"  android:text=""  android:layout_height="wrap_content" android:layout_weight="0" android:padding="2dip" android:layout_width="fill_parent"></TextView>
     </TableRow>
                 
</TableLayout> 			
	
</LinearLayout>
