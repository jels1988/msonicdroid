        <TextView android:text="Password :" android:focusable="false" android:layout_height="wrap_content" android:layout_weight="0" android:id="@+id/textView1" android:layout_width="fill_parent"></TextView>
            <EditText android:id="@+id/txtPassword" android:layout_width="fill_parent" android:hint="Ingresar ContraseÃ±a" android:layout_height="wrap_content" android:text="" android:layout_weight="1" android:password="true" android:inputType="number|textPassword" android:maxLength="8"></EditText>
               
   <Button android:layout_width="wrap_content" 
    android:layout_gravity="right" 
