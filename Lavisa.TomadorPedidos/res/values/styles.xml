<style name="CustomTheme" parent="Theme.Sherlock.Light">

    <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
    <item name="titleTextStyle">@style/TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse</item>
    <item name="subtitleTextStyle">@style/TextAppearance.Sherlock.Widget.ActionBar.Subtitle.Inverse</item>
    
    
    
    <item name="actionBarTabBarStyle">@style/Widget.Sherlock.ActionBar.TabBar</item>
    <item name="actionBarTabTextStyle">@style/Widget.Sherlock.ActionBar.TabText</item>
    <!--item name="actionBarTabStyle">@style/Widget.Sherlock.ActionBar.TabView</item-->
    
    
<!--     <item name="android:windowBackground">@color/custom_theme_color_amarillo</item> -->
<item name="android:windowBackground">@drawable/background_lindley</item>
	

	<item name="android:colorForegroundInverse">@color/custom_theme_color_amarillo</item>
	<item name="android:colorBackground">@color/custom_theme_color_lila</item>
	<item name="android:disabledAlpha">0.5</item>
	<item name="android:backgroundDimAmount">0.6</item>

  <!-- Window attributes -->
     <item name="android:windowFrame">@null</item>
     <item name="android:windowNoTitle">true</item>
     <item name="android:windowFullscreen">false</item>
     <item name="android:windowIsFloating">false</item>
	 <item name="android:windowTitleSize">35dip</item>
	 <item name="android:windowTitleStyle">@style/WindowTitleCustom</item>
	 <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackgroundCustom</item>
     <item name="android:windowSoftInputMode">stateUnspecified|adjustUnspecified</item>
     
 	<item name="android:editTextStyle">@style/EditTextCustom</item>
 	<item name="android:textViewStyle">@style/TextViewCustom</item>
 	<item name="android:buttonStyle">@style/ButtonCustom</item>
 	<item name="android:listViewStyle">@style/MyListView</item>
 	<item name="android:radioButtonStyle">@style/RadioButtonCustom</item>
 	<item name="android:checkboxStyle">@style/CheckBoxCustom</item>
 	
 	
</style>

