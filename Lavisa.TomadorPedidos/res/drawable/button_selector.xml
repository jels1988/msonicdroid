<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        	<gradient android:type="radial" android:gradientRadius="25" android:startColor="#EB4A30" android:centerColor="#921100" android:endColor="#EB4A30" />
            <stroke
                android:width="1dp"
                android:color="#E93517" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
   
       <item>
        <shape>
            <gradient
      android:startColor="#E3001B"
      android:centerColor="#BA0016"
      android:endColor="#E3001B"
      android:type="radial" android:gradientRadius="40" />
            <stroke
                android:width="1dp"
                android:color="#F20000" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    

</selector>